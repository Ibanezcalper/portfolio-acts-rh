---
import Glosario from "../components/Glosario.astro";
import Flashcards from "../components/Flashcards.astro";
import SopaDeLetras from "../components/SopaDeLetras.astro";
import Match from "../components/Match.astro";
import Crucigrama from "../components/Crucigrama.astro";
---

<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>Expert RH | Ecosistema de Aprendizaje Estratégico</title>

		<!-- Typography -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Outfit:wght@100;300;400;500;600;700;800;900&display=swap"
			rel="stylesheet"
		/>

		<style is:global>
			:root {
				--accent: 37, 99, 235;
				--accent-gradient: linear-gradient(
					45deg,
					rgb(var(--accent)),
					#4f46e5 30%,
					white 60%
				);
			}
			body {
				font-family: "Outfit", sans-serif;
				background-color: #f8fafc;
				overflow-x: hidden;
			}
			.mesh-bg {
				background-image:
					radial-gradient(
						at 0% 0%,
						rgba(59, 130, 246, 0.05) 0,
						transparent 50%
					),
					radial-gradient(
						at 50% 0%,
						rgba(79, 70, 229, 0.05) 0,
						transparent 50%
					),
					radial-gradient(
						at 100% 0%,
						rgba(59, 130, 246, 0.05) 0,
						transparent 50%
					);
			}
			.premium-card {
				background: rgba(255, 255, 255, 0.7);
				backdrop-filter: blur(12px);
				border: 1px solid rgba(255, 255, 255, 0.3);
			}
		</style>
	</head>
	<body class="mesh-bg text-slate-900">
		<!-- Navigation -->
		<nav
			class="fixed top-6 left-1/2 -translate-x-1/2 z-[100] w-[90%] max-w-4xl premium-card rounded-3xl py-4 px-8 border border-slate-200/50 shadow-[0_8px_32px_rgba(0,0,0,0.05)]"
		>
			<div class="flex justify-between items-center">
				<a
					href="#"
					class="text-xl font-black tracking-tighter text-slate-800"
				>
					EXPERT <span class="text-blue-600 italic">RH</span>
				</a>
				<div
					class="hidden md:flex items-center gap-8 text-[11px] font-black uppercase tracking-[0.2em] text-slate-400"
				>
					<a
						href="#glosario"
						class="hover:text-blue-600 transition-colors"
						>Glosario</a
					>
					<a
						href="#flashcards"
						class="hover:text-blue-600 transition-colors"
						>Flashcards</a
					>
					<a
						href="#sopa"
						class="hover:text-blue-600 transition-colors">Sopa</a
					>
					<a
						href="#match"
						class="hover:text-blue-600 transition-colors"
						>Relación</a
					>
					<a
						href="#crossword"
						class="hover:text-blue-600 transition-colors"
						>Crucigrama</a
					>
				</div>
				<button class="md:hidden p-2" id="mobile-menu-btn">
					<svg
						class="w-6 h-6"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
						><path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2.5"
							d="M4 6h16M4 12h16m-7 6h7"></path></svg
					>
				</button>
			</div>
			<div
				id="mobile-menu"
				class="hidden md:hidden pt-4 space-y-4 text-center pb-4"
			>
				<a
					href="#glosario"
					class="block text-[10px] font-black uppercase tracking-widest text-slate-400"
					>Glosario</a
				>
				<a
					href="#flashcards"
					class="block text-[10px] font-black uppercase tracking-widest text-slate-400"
					>Flashcards</a
				>
				<a
					href="#sopa"
					class="block text-[10px] font-black uppercase tracking-widest text-slate-400"
					>Sopa</a
				>
				<a
					href="#match"
					class="block text-[10px] font-black uppercase tracking-widest text-slate-400"
					>Relación</a
				>
				<a
					href="#crossword"
					class="block text-[10px] font-black uppercase tracking-widest text-slate-400"
					>Crucigrama</a
				>
			</div>
		</nav>

		<script>
			const btn = document.getElementById("mobile-menu-btn");
			const menu = document.getElementById("mobile-menu");
			btn?.addEventListener("click", () => {
				menu?.classList.toggle("hidden");
			});
			menu?.querySelectorAll("a").forEach((link) => {
				link.addEventListener("click", () =>
					menu.classList.add("hidden"),
				);
			});
		</script>

		<main>
			<!-- Hero Header -->
			<section
				class="min-h-screen flex flex-col items-center justify-center px-6 pt-32 pb-20 relative overflow-hidden"
			>
				<div class="absolute inset-0 -z-20">
					<div
						class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-blue-100/20 rounded-full blur-[160px] animate-pulse"
					>
					</div>
				</div>

				<div class="text-center max-w-5xl mx-auto space-y-12">
					<div class="space-y-4">
						<span
							class="inline-block px-4 py-1.5 bg-white border border-slate-100 shadow-sm rounded-full text-[10px] font-black uppercase tracking-[0.3em] text-blue-600"
						>
							Ecosistema Interactivo v2.5
						</span>
						<h1
							class="text-6xl md:text-9xl font-black tracking-tighter leading-[0.85] text-slate-900"
						>
							Gestión del <br />
							<span
								class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 via-indigo-600 to-indigo-700 italic pr-4"
								>Talento Humano.</span
							>
						</h1>
					</div>

					<p
						class="text-xl md:text-2xl text-slate-500 font-medium max-w-2xl mx-auto leading-relaxed"
					>
						Domina los pilares de la organización moderna a través
						de una experiencia de aprendizaje gamificada y técnica.
					</p>

					<div
						class="flex flex-wrap items-center justify-center gap-6 pt-8"
					>
						<a
							href="#glosario"
							class="px-10 py-5 bg-slate-900 text-white rounded-2xl font-black text-sm hover:scale-105 active:scale-95 transition-all shadow-2xl shadow-slate-900/30"
						>
							EXPLORAR GLOSARIO
						</a>
						<a
							href="#flashcards"
							class="px-10 py-5 bg-white text-slate-900 border border-slate-200 rounded-2xl font-black text-sm hover:bg-slate-50 active:scale-95 transition-all shadow-sm"
						>
							MODO ENTRENAMIENTO
						</a>
					</div>
				</div>

				<div
					class="absolute bottom-12 left-1/2 -translate-x-1/2 animate-bounce opacity-20"
				>
					<svg
						class="w-8 h-8"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
						><path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M19 14l-7 7m0 0l-7-7m7 7V3"></path></svg
					>
				</div>
			</section>

			<!-- Content Sections -->
			<section id="glosario" class="scroll-mt-32">
				<Glosario client:load />
			</section>

			<section id="flashcards" class="scroll-mt-32">
				<Flashcards client:load />
			</section>

			<section id="sopa" class="scroll-mt-32 bg-white">
				<SopaDeLetras client:load />
			</section>

			<section id="match" class="scroll-mt-32 border-t border-slate-100">
				<Match client:load />
			</section>

			<section
				id="crossword"
				class="scroll-mt-32 border-t border-slate-100 bg-white"
			>
				<Crucigrama client:load />
			</section>
		</main>

		<!-- Footer -->
		<footer class="py-32 px-6 bg-slate-950 text-white text-center">
			<div class="max-w-4xl mx-auto space-y-12">
				<h2 class="text-5xl font-black tracking-tighter">
					Impulsando la <span class="text-blue-500"
						>Excelencia Operativa.</span
					>
				</h2>
				<div
					class="flex flex-col md:flex-row items-center justify-center gap-12 text-slate-500 font-bold uppercase tracking-widest text-[10px]"
				>
					<div class="space-y-2">
						<span class="text-slate-200 text-xs block"
							>PROYECTO</span
						>
						Portfolio de Recursos Humanos
					</div>
					<div class="space-y-2">
						<span class="text-slate-200 text-xs block">STACK</span>
						Astro + Tailwind + JS
					</div>
					<div class="space-y-2">
						<span class="text-slate-200 text-xs block">EDICIÓN</span
						>
						2026 ESTRATÉGICA
					</div>
				</div>
				<div
					class="pt-20 border-t border-white/5 opacity-40 text-[9px] font-black uppercase tracking-[0.5em]"
				>
					© 2026 EXPERT RH • TODOS LOS DERECHOS RESERVADOS
				</div>
			</div>
		</footer>
	</body>
</html>
