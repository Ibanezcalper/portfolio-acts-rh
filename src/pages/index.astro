---
import Glosario from "../components/Glosario.astro";
import Flashcards from "../components/Flashcards.astro";
import SopaDeLetras from "../components/SopaDeLetras.astro";
import Match from "../components/Match.astro";
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Recursos Humanos - Portfolio Interactivo</title>
		<link
			href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;800&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body class="bg-gray-50 text-gray-900 font-['Outfit',sans-serif]">
		<header
			class="bg-white border-b border-gray-100 py-6 sticky top-0 z-50"
		>
			<div
				class="max-w-7xl mx-auto px-4 flex justify-between items-center"
			>
				<h1 class="text-2xl font-black text-blue-900 tracking-tighter">
					RH <span class="text-blue-500">EXPERTO</span>
				</h1>
				<nav
					class="hidden md:flex gap-8 list-none font-semibold text-sm text-gray-400"
				>
					<li>
						<a
							href="#glosario"
							class="hover:text-blue-600 transition-colors"
							>Glosario</a
						>
					</li>
					<li>
						<a
							href="#flashcards"
							class="hover:text-blue-600 transition-colors"
							>Flashcards</a
						>
					</li>
					<li>
						<a
							href="#sopa"
							class="hover:text-blue-600 transition-colors"
							>Sopa</a
						>
					</li>
					<li>
						<a
							href="#match"
							class="hover:text-blue-600 transition-colors"
							>Relación</a
						>
					</li>
				</nav>
			</div>
		</header>

		<main class="space-y-32 py-20">
			<!-- Hero Section -->
			<section class="max-w-7xl mx-auto px-4 text-center">
				<div
					class="inline-block px-4 py-1.5 bg-blue-50 text-blue-600 rounded-full text-xs font-bold uppercase tracking-widest mb-6"
				>
					Maestría en Gestión del Talento
				</div>
				<h2
					class="text-6xl md:text-8xl font-black text-gray-900 leading-[0.9] tracking-tighter mb-8"
				>
					Aprendizaje <br />
					<span
						class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600 italic"
						>Interactivo.</span
					>
				</h2>
				<p
					class="text-xl text-gray-500 max-w-2xl mx-auto font-medium leading-relaxed"
				>
					Domina los conceptos clave de los Recursos Humanos mediante
					herramientas diseñadas para potenciar tu retención y
					comprensión estratégica.
				</p>
			</section>

			<!-- Components -->
			<section id="glosario" class="scroll-mt-24">
				<Glosario client:load />
			</section>

			<section
				id="flashcards"
				class="bg-blue-900 py-32 text-white scroll-mt-24"
			>
				<Flashcards client:load />
			</section>

			<section id="sopa" class="scroll-mt-24">
				<SopaDeLetras client:load />
			</section>

			<section id="match" class="bg-gray-100 py-32 scroll-mt-24">
				<Match client:load />
			</section>
		</main>

		<footer class="bg-white border-t border-gray-200 py-12">
			<div class="max-w-7xl mx-auto px-4 text-center">
				<p class="text-gray-400 font-semibold text-sm">
					© 2026 Plataforma de Recursos Humanos. Desarrollado con
					Astro y Tailwind CSS.
				</p>
			</div>
		</footer>
	</body>
</html>
