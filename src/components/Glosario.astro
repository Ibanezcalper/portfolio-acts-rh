---
import conceptosData from '../../public/conceptos.json';

const classes = [...new Set(conceptosData.map(c => c.clase))].sort((a, b) => a - b);

const colorMap: Record<number, string> = {
    1: 'from-blue-500 to-cyan-500',
    2: 'from-indigo-500 to-purple-500',
    3: 'from-emerald-500 to-teal-500',
    4: 'from-orange-500 to-amber-500',
    5: 'from-rose-500 to-pink-500',
    6: 'from-slate-500 to-gray-500'
};

---

<div class="max-w-7xl mx-auto px-6 py-20 relative" id="glosario-expert">
    <!-- Background Decoration -->
    <div class="absolute top-0 right-0 -z-10 w-96 h-96 bg-blue-100/30 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-0 left-0 -z-10 w-80 h-80 bg-indigo-100/20 rounded-full blur-[100px]"></div>

    <div class="flex flex-col md:flex-row md:items-end justify-between gap-8 mb-16">
        <div class="max-w-2xl">
            <span class="inline-block px-4 py-1.5 bg-blue-50 text-blue-600 rounded-full text-[10px] font-black uppercase tracking-[0.2em] mb-4">
                Diccionario de Competencias
            </span>
            <h2 class="text-4xl md:text-5xl font-extrabold text-slate-900 tracking-tight leading-tight mb-4 text-balance">
                Glosario <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600 italic">Estrat√©gico</span>
            </h2>
            <p class="text-lg text-slate-500 font-medium text-pretty">
                Navega por los pilares de la gesti√≥n moderna. Una base de conocimientos din√°mica dise√±ada para expertos en Capital Humano.
            </p>
        </div>
        
        <!-- Search & Filter Controls -->
        <div class="w-full md:w-auto flex flex-col gap-4">
            <div class="relative group">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                    <svg class="w-5 h-5 text-slate-400 group-focus-within:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </div>
                <input 
                    type="text" 
                    id="search-input" 
                    placeholder="Filtrar por t√©rmino o concepto..." 
                    class="w-full md:w-80 pl-12 pr-4 py-4 bg-white border border-slate-200 rounded-2xl shadow-sm focus:ring-4 focus:ring-blue-100 focus:border-blue-500 focus:bg-white outline-none transition-all font-medium text-slate-700 placeholder:text-slate-300"
                />
            </div>
        </div>
    </div>

    <!-- Filter Pills -->
    <div class="flex flex-wrap gap-3 mb-12 touch-manipulation" id="filter-container">
        <button 
            class="filter-pill active px-6 py-2.5 rounded-xl text-xs font-black uppercase tracking-widest transition-all duration-300 border-2 focus-visible:ring-2 focus-visible:ring-slate-900 outline-none" 
            data-clase="all"
        >
            Todos
        </button>
        {classes.map(clase => (
            <button 
                class="filter-pill px-6 py-2.5 rounded-xl text-xs font-black uppercase tracking-widest transition-all duration-300 border-2 border-transparent bg-white text-slate-500 shadow-sm hover:border-slate-200 focus-visible:ring-2 focus-visible:ring-blue-500 outline-none" 
                data-clase={clase.toString()}
            >
                M√≥dulo 0{clase}
            </button>
        ))}
    </div>

    <!-- Cards Grid -->
    <div id="concept-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {conceptosData.map(c => (
            <div 
                class="concept-card bg-white/70 backdrop-blur-xl p-8 rounded-[2.5rem] border border-slate-100 shadow-[0_8px_30px_rgb(0,0,0,0.04)] hover:shadow-[0_20px_50px_rgba(59,130,246,0.1)] transition-all duration-500 group relative overflow-hidden"
                data-termino={c.termino.toLowerCase()}
                data-definicion={c.definicion.toLowerCase()}
                data-clase={c.clase.toString()}
            >
                <!-- Class Indicator -->
                <div class={`absolute top-0 right-0 w-24 h-24 bg-gradient-to-br ${colorMap[c.clase] || colorMap[6]} opacity-[0.03] rounded-bl-[4rem] group-hover:opacity-[0.08] transition-opacity`}></div>
                
                <div class="mb-6 flex items-center justify-between">
                    <span class={`text-[10px] font-black px-3 py-1.5 rounded-lg uppercase tracking-[0.15em] bg-white shadow-sm border border-slate-100 text-slate-500`}>
                        M√ìDULO 0{c.clase}
                    </span>
                    <div class={`w-2 h-2 rounded-full bg-gradient-to-r ${colorMap[c.clase] || colorMap[6]}`}></div>
                </div>

                <h3 class="text-2xl font-extrabold text-slate-800 mb-4 group-hover:text-blue-600 transition-colors tracking-tight text-pretty">
                    {c.termino}
                </h3>
                
                <p class="text-slate-500 leading-relaxed font-medium text-sm lg:text-base text-pretty">
                    {c.definicion}
                </p>
                
                <div class="mt-8 pt-6 border-t border-slate-50 flex justify-between items-center opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-y-2 group-hover:translate-y-0">
                    <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">Recurso verificado</span>
                    <div class="w-8 h-8 rounded-full bg-slate-50 flex items-center justify-center text-blue-500">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
                        </svg>
                    </div>
                </div>
            </div>
        ))}
    </div>

    <!-- Empty State -->
    <div id="no-results" class="hidden py-40 text-center animate-in fade-in zoom-in duration-500">
        <div class="w-24 h-24 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-6 text-4xl shadow-inner">
            üîç
        </div>
        <h3 class="text-2xl font-bold text-slate-800">No encontramos coincidencias</h3>
        <p class="text-slate-400 mt-2 font-medium max-w-sm mx-auto tracking-tight">Prueba con palabras clave m√°s generales o limpia los filtros de clase.</p>
        <button id="clear-filters" class="mt-8 px-8 py-3 bg-slate-900 text-white rounded-2xl font-bold text-sm hover:scale-105 active:scale-95 transition-all focus-visible:ring-4 focus-visible:ring-blue-100 outline-none">
            Limpiar b√∫squeda
        </button>
    </div>
</div>

<style>
    .filter-pill.active {
        background: #1e293b;
        color: white;
        border-color: #1e293b;
        box-shadow: 0 10px 20px -5px rgba(30, 41, 59, 0.3);
    }
    
    .concept-card {
        will-change: transform, opacity;
    }

    @keyframes card-in {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<script>
    function initExpertGlosario() {
        const searchInput = document.getElementById('search-input') as HTMLInputElement;
        const pills = document.querySelectorAll('.filter-pill');
        const cards = document.querySelectorAll('.concept-card');
        const noResults = document.getElementById('no-results');
        const clearBtn = document.getElementById('clear-filters');

        let query = '';
        let currentFilter = 'all';

        function update() {
            let matches = 0;
            const grid = document.getElementById('concept-grid');
            cards.forEach(card => {
                const c = card as HTMLElement;
                const txt = (c.dataset.termino ?? '') + ' ' + (c.dataset.definicion ?? '');
                const isMatch = txt.includes(query.toLowerCase()) && 
                               (currentFilter === 'all' || c.dataset.clase === currentFilter);
                
                if (isMatch) {
                    c.style.display = 'block';
                    c.style.animation = 'card-in 0.4s ease forwards';
                    matches++;
                } else {
                    c.style.display = 'none';
                }
            });

            if (matches === 0) {
                noResults?.classList.remove('hidden');
                grid?.classList.add('hidden');
            } else {
                noResults?.classList.add('hidden');
                grid?.classList.remove('hidden');
            }
        }


        searchInput?.addEventListener('input', (e) => {
            query = (e.target as HTMLInputElement).value;
            update();
        });

        pills.forEach(pill => {
            pill.addEventListener('click', () => {
                pills.forEach(p => p.classList.remove('active'));
                pill.classList.add('active');
                currentFilter = (pill as HTMLElement).dataset.clase ?? 'all';
                update();
            });
        });


        clearBtn?.addEventListener('click', () => {
            if (searchInput) searchInput.value = '';
            query = '';
            pills[0].dispatchEvent(new Event('click'));
            update();
        });
    }

    initExpertGlosario();
</script>
